<resources>

    <style name="AppTheme" parent="BaseTheme" />
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FlatButtonStyle" parent="Widget.AppCompat.Button.Borderless" />

    <style name="ColoredFlatButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored" />

    <style name="TextButton" parent="FlatButtonStyle">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ColoredTextButton" parent="ColoredFlatButtonStyle">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="RaisedButtonStyle" parent="Widget.AppCompat.Button.Colored" />

    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal" />

    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
