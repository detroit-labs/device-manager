<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="detail"
            type="com.detroitlabs.devicemanager.models.Device" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:orientation="vertical">

        <com.detroitlabs.devicemanager.list.DetailItemView
            android:id="@+id/brandAndModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Brand and model"
            app:value="@{detail.brandAndModel}" />

        <com.detroitlabs.devicemanager.list.DetailItemView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Version"
            app:value="@{detail.version}" />

        <com.detroitlabs.devicemanager.list.DetailItemView
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Size"
            app:value="@{detail.screenSize}" />

        <com.detroitlabs.devicemanager.list.DetailItemView
            android:id="@+id/resolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Resolution"
            app:value="@{detail.screenResolution}" />

        <com.detroitlabs.devicemanager.list.DetailItemView
            android:id="@+id/serial_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Serial Number"
            app:value="@{detail.serialNumber}" />


    </LinearLayout>
</layout>